<!--登陆界面-->
<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
 <view class="page__hd">
        <image class="widget__arrow" src="../../images/kphr_logo.png" mode="aspectFit" style="width:100%;;height:120px;">  
        </image>  
    </view>
     
    <view class="page__bd">
        <!-- <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">请输入有效信息</view> -->
         <view class="weui-cells__title">首次登陆,请重设登陆密码</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">新密码</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" password='true' bindinput='newPassword' placeholder="请重新设置您的密码"/>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">确认密码</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" password='true' bindinput='confirmNewPassword' placeholder="请确认输入您的新密码"/>
                </view>
            </view>                                 
           
        </view>
    
          <view class="weui-btn-area">
              <button class="weui-btn" type="primary" bindtap="resetPassword">确定</button>
         </view>
       


    </view>
</view>