weui-panel__hd12 {
  padding: 14px 15px 10px;
  color: #c09 !important;
  font-size: 16px;
  position: relative;
  text-align: center;
}

.weui-media-box__title1 {
  font-size: 30px;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
  word-break: break-all;
  text-align: center;
  color: #f6c;
}

.weui-media-box__bd_in-appmsg1 {
  -webkit-box-flex: 1;
  min-width: 0;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.weui-media-box__desc {
  color: #f6c;
  font-size: 13px;
  line-height: 1.5em;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.weui-media-box__desc1 {
  color: #f0c;
  font-size: 13px;
  line-height: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1.8;
}

.play {
  flex: 1;
  height: 100%;
  box-sizing: border-box;
  margin-right: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.play image {
  width: 28px;
  height: 28px;
}

.weui-panel__hd {
  padding: 14px 15px 10px;
  color: #03c;
  font-size: 13px;
  position: relative;
}

