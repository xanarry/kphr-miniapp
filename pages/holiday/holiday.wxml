<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
   <view class="page__hd">
        <image class="widget__arrow" src="../../images/0002.png" mode="aspectFit" style="width:100%;;height:100px;">  
        </image>  
    </view>
    <view class="page__bd">
        <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">错误提示</view>

        <view class="weui-cells__title">请假时间</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input class="weui-input" placeholder="请输入请假时间" />
                </view>
            </view>
        </view>

        <view class="weui-cells__title">详细理由</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <textarea class="weui-textarea" placeholder="请输入详细原因" style="height: 3.3em" />
                    <view class="weui-textarea-counter">0/200</view>
                </view>
            </view>
        </view>
       
        <view class="weui-btn-area">
            <button class="weui-btn" type="primary" bindtap="showTopTips">确定提交</button>
        </view>
    </view>
</view>